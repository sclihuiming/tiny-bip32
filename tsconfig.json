{
  "compilerOptions": {
    "allowJs": true,
    "alwaysStrict": true,
    // "declaration": true,
    // "declarationDir": "./types",
    "esModuleInterop": false,
    "lib": [
      "es2017"
    ],
    "module": "commonjs",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "outDir": "./src",
    "rootDir": "./ts-src",
    "strict": true,
    "strictBindCallApply": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "target": "es2017",
    "types": [
      "node"
    ]
  },
  "include": [
      "ts-src/*.ts",
      "ts-src/**/*.ts"
, "ts-src/tiny-secp256k1/secp256k1.js", "ts-src/tiny-secp256k1/rfc6979.js", "ts-src/tiny-secp256k1/index.js"  ],
  "exclude": [
      "**/*.spec.ts",
      "node_modules/**/*"
  ]
}
